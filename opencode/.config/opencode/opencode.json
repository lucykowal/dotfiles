{
  "$schema": "http://opencode.ai/config.json",
  "share": "disabled",
  "agent": {
    "build": {
      "mode": "all",
      "model": "github-copilot/grok-code-fast-1",
      "description": "Quickly and efficiently write code.",
      "temperature": 0.5,
      "tools": {
        "webfetch": false
      }
    },
    "plan": {
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-20250514",
      "description": "Plan, strategize, and delegate to other agents to handle complex tasks",
      "prompt": "{file:./prompts/plan.txt}",
      "tools": {
        "write": false,
        "edit": false,
        "patch": false
      },
      "temperature": 0.7
    },
    "code-reviewer": {
      "mode": "subagent",
      "model": "github-copilot/gpt-4.1",
      "description": "Test and review code to check correctness errors, quality control, and performance issues",
      "prompt": "{file:./prompts/code-review.txt}",
      "tools": {
        "write": false,
        "edit": false,
        "patch": false,
        "webfetch": false
      },
      "temperature": 0.1
    },
    "research": {
      "mode": "all",
      "model": "anthropic/claude-sonnet-4-20250514",
      "description": "Perform in-depth research on complex topics, gather information from multiple sources, and provide comprehensive summaries.",
      "prompt": "{file:./prompts/research.txt}",
      "tools": {
        "write": false,
        "edit": false,
        "patch": false
      }
    },
  },
  "model": "anthropic/claude-sonnet-4-20250514",
  "small_model": "github-copilot/grok-code-fast-1",
  "provider": {
    "anthropic": {
      "models": {
        "claude-opus-4-20250514": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          }
        }
      }
    },
  },
  "theme": "system",
  "keybinds": {
    "leader": "ctrl+space",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "messages_last": "ctrl+shift+g",
    "input_submit": "<leader>enter",
    "input_newline": "enter",
  },
  "permission": {
    "bash": {
      "git status": "allow",
      "git diff": "allow",
      "date": "allow",
      "cat": "allow",
      "grep *": "allow",
      "fzf *": "allow",
      "find *": "allow",
      "man *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "rg *": "allow",
      "wc *": "allow",
      "sort *": "allow",
      "diff *": "allow",
      "pwd": "allow",
      "ls *": "allow",
      "*": "ask",
      "*.envrc*": "deny",
      "*.env*": "deny",
    },
    "edit": "ask",
    "webfetch": "allow"
  },
  "mcp": {
    "github-mcp": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer {env:GITHUB_PAT}"
      }
    }
  }
}
